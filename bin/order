#!/data/data/com.termux/files/usr/bin/bash

IFS=$'\n'

animes() {
  ls | grep -Po '(?<= - ).+(?=\.mp4)' | sort -u
}

ls_counter() {
  count=`ls 2>/dev/null -Ubad1 -- $@ | wc -l`
}

order() {
  anime="$1"
  echo $anime
  mkdir -p "$anime"
  mv *"$anime.mp4" "$anime"
}

order1() {
  rand='AleatÃ³rios'

  mkdir $rand 2> /dev/null && mv *.mp4 $rand
}

main() {
  for anime in `animes`
  do
    ls_counter *"$anime.mp4"
    [[ $count > 1 ]] && order $anime
  done

  ls_counter *.mp4
  [[ $count > 0 ]] && order1
}

main
